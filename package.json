{
  "name": "flowed-http",
  "version": "0.1.0",
  "description": "Flowed resolver library to make HTTP/HTTPS request",
  "keywords": [
    "flow",
    "engine",
    "task",
    "dependency",
    "flowframework",
    "task-manager",
    "task-runner",
    "flowengine",
    "flow-engine",
    "flow-execution",
    "orchestration",
    "microservices",
    "http",
    "https",
    "web",
    "api",
    "rest",
    "restful"
  ],
  "author": "Daniel Duarte <danieldd.ar@gmail.com> (https://github.com/danielduarte)",
  "license": "MIT",
  "homepage": "https://github.com/danielduarte/flowed-http",
  "repository": "github:danielduarte/flowed-http",
  "scripts": {
    "build": "tsc",
    "build:watch": "npm run build -- --watch",
    "start": "npm test",
    "test": "nyc mocha --require ts-node/register test/*.ts",
    "coverage": "nyc report",
    "coverage:send": "nyc report --reporter=text-lcov | coveralls",
    "posttest": "npm run lint",
    "lint": "tslint -p tsconfig.json -t verbose && tslint -p tsconfig.test.json -t verbose",
    "format": "tslint -p tsconfig.json -t verbose --fix && tslint -p tsconfig.test.json -t verbose --fix && prettier --write \"src/**/*.ts\" && prettier --write \"test/**/*.ts\"",
    "release:prepare": "rm -rf ./dist ./node_modules package-lock.json && npm install && npm run format && npm run build && npm run bundle && npm test && git status",
    "prebundle": "npm run build",
    "bundle": "webpack",
    "postbundle": "mkdir -p dist/lib && cp web/flowed-http.js dist/lib/flowed-http.js"
  },
  "config": {
    "allowedLicenseTypes": [
      "permissive",
      "publicDomain",
      "uncategorized"
    ]
  },
  "main": "dist/index.js",
  "browser": "dist/lib/flowed-http.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/debug": "^4.1.5",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.5",
    "chai": "^4.2.0",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "exclude": [
      "test",
      "coverage",
      "dist",
      "*.js",
      "web/flowed-http.js"
    ],
    "check-coverage": true,
    "skip-full": true,
    "reporter": [
      "text"
    ],
    "branches": 70,
    "functions": 50,
    "lines": 85,
    "statements": 85
  }
}
